<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>MFS</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <%= link_to 'MFS', root_url, class: 'brand' %>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li>
            <%= link_to 'Home', root_url %>
          </li>
          <% if can?(:index, UsersController) %>
              <li>
                <%= link_to 'Users', users_url %>
              </li>
          <% end %>
        </ul>
      </div><!--/.nav-collapse -->

      <div class="pull-right" id="user-block">

        <% I18n.locale == :ru ?
                   locale = :en :
                   locale = :ru %>

        <%= link_to t('top_menu.change_locale'),
                    change_locale_url(locale) %>

        <% if current_user %>
            <p>
              <%= current_user.user_name %>
              <%= link_to 'Sign out', sign_out_path %>
            </p>
        <% else %>
            <a class="twitter" href="/auth/twitter"></a>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid" id="main_content">
  <div class="row-fluid">
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <button type="button" class="close"
                  data-dismiss="alert">&times;</button>
          <%= value %>
        </div>
    <% end %>
  </div>

  <div class="row-fluid">
    <%= yield %>
  </div>
</div>

<footer>
  <div class="container-fluid">
    &copy; <%= Time.now.year %> MATI Feedback System
  </div>
</footer>

</body>
</html>
